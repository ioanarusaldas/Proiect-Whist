<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85b9e3"
    tools:context=".ScoreTab">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/score_player_name_1"
            style="@style/score_field_style"
            android:layout_row="0"
            android:layout_column="0"
            android:text="player1" />

        <TextView
            android:id="@+id/score_player_name_2"
            style="@style/score_field_style"
            android:layout_row="0"
            android:layout_column="1"
            android:text="player1" />

        <TextView
            android:id="@+id/score_player_name_3"
            android:text="player1"
            style="@style/score_field_style"
            android:layout_row="0"
            android:layout_column="2"/>

        <TextView
            android:id="@+id/score_player_name_4"
            android:layout_row="0"
            android:layout_column="3"
            android:text="player1"
            style="@style/score_field_style" />


        <TextView
            android:id="@+id/score_player_name_5"
            android:layout_row="0"
            android:layout_column="4"
            android:text="player1"
            style="@style/score_field_style" />

        <TextView
            android:id="@+id/score_player_name_6"
            android:layout_row="0"
            android:layout_column="5"
            android:text="player1"
            style="@style/score_field_style" />


        <TextView
            android:id="@+id/score_player_1"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/zero"
            style="@style/score_field_style"/>

        <TextView
            android:id="@+id/score_player_2"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/score_field_style"
            android:text="@string/zero" />

        <TextView
            android:id="@+id/score_player_3"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/zero"
            style="@style/score_field_style"/>

        <TextView
            android:id="@+id/score_player_4"
            android:layout_row="1"
            android:layout_column="3"
            style="@style/score_field_style"
            android:text="@string/zero" />

        <TextView
            android:id="@+id/score_player_5"
            android:layout_row="1"
            android:layout_column="4"
            android:text="@string/zero"
            style="@style/score_field_style"/>

        <TextView
            android:id="@+id/score_player_6"
            android:layout_row="1"
            android:layout_column="5"
            android:text="@string/zero"
            style="@style/score_field_style"/>


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>